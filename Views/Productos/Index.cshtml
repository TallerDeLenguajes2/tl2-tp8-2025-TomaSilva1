@using Microsoft.VisualBasic
@model List<Productos>

@{
    ViewData["Title"] = "Home Page Productos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>Index productos</title>
</head>
<body>
    <div class="container text-center">
        <h1>Productos</h1>
        <p>Lista de productos cargados.</p>
    </div>

    <div class="collapse" id="navbarToggleExternalContent" data-bs-theme="dark">
    <div class="bg-dark p-4">
        <h5 class="text-body-emphasis h4">Opciones</h5>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between white">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Productos" asp-action="Details">Buscar por Id</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Productos" asp-action="Create">Dar de alta</a>
                </li>
            </ul>
        </div>
    </div>
    </div>
    <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
    </div>
    </nav>

    <table class="table table-bordered">
        <thead>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
        </thead>
        <tbody>
            @foreach(var prod in Model){
                <tr scope="row">
                    <td>@prod.Descripcion</td>
                    <td>@prod.Precio</td>
                    <td><button><a asp-controller="Productos" asp-action="AuxiliarEdit" asp-route-id="@prod.IdProducto">Editar</a></button></td>
                    <td><button><a asp-controller="Productos" asp-action="Delete" asp-route-id="@prod.IdProducto">Eliminar</a></button></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>